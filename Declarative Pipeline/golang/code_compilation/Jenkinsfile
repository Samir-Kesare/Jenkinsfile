pipeline {
    agent any

    tools {
        go 'go1.22.0'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', credentialsId: 'khushi_cred', url: 'https://github.com/OT-MyGurukulam/employee-api.git'
            }
        }

        stage('Clean Workspace') {
            steps {
                cleanWs()
            }
        }

        stage('Code Compilation') {
            steps {
                script {
                    sh 'go install'
                    sh "go list -f '{{.Target}}'"
                }
            }
        }
    }
}
